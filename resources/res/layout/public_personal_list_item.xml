<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/my_meeting_message" android:background="@color/light_blue" android:layout_width="match_parent" android:layout_height="@dimen/activity_public_editext">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/list_item_start" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:layout_width="@dimen/activity_public_hint" android:layout_height="@dimen/activity_public_hint" android:src="@drawable/personal_meeting_list_start" android:adjustViewBounds="true" android:maxWidth="@dimen/activity_public_hint" android:maxHeight="@dimen/activity_public_hint"/>
            <TextView android:textSize="@dimen/textSize26PX" android:textColor="@drawable/public_meeting_list_text_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/open_the_meeting"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/list_item_edit" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:layout_width="@dimen/activity_public_hint" android:layout_height="@dimen/activity_public_hint" android:src="@drawable/personal_meeting_list_edit" android:adjustViewBounds="true" android:maxWidth="@dimen/activity_public_hint" android:maxHeight="@dimen/activity_public_hint"/>
            <TextView android:textSize="@dimen/textSize26PX" android:textColor="@drawable/public_meeting_list_text_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal_list_edit"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/list_item_remove" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:layout_width="@dimen/activity_public_hint" android:layout_height="@dimen/activity_public_hint" android:src="@drawable/personal_meeting_list_remove" android:adjustViewBounds="true" android:maxWidth="@dimen/activity_public_hint" android:maxHeight="@dimen/activity_public_hint"/>
            <TextView android:textSize="@dimen/textSize26PX" android:textColor="@drawable/public_meeting_list_text_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal_list_remove"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/list_item_share" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:layout_width="@dimen/activity_public_hint" android:layout_height="@dimen/activity_public_hint" android:src="@drawable/personal_meeting_list_share" android:adjustViewBounds="true" android:maxWidth="@dimen/activity_public_hint" android:maxHeight="@dimen/activity_public_hint"/>
            <TextView android:textSize="@dimen/textSize26PX" android:textColor="@drawable/public_meeting_list_text_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal_list_share"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
