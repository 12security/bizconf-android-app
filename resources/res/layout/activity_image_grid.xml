<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/content" android:background="#000" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/top_bar" layout="@layout/include_top_bar"/>
    <RelativeLayout android:background="#111111" android:layout_width="match_parent" android:layout_height="match_parent">
        <GridView android:id="@+id/gridview" android:paddingLeft="2dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="50dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:horizontalSpacing="2dp" android:verticalSpacing="2dp" android:stretchMode="columnWidth" android:numColumns="3"/>
        <RelativeLayout android:id="@+id/footer_bar" android:background="#dc22292c" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
            <Button android:textSize="16sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/btn_dir" android:background="@null" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="全部图片" android:singleLine="true" android:drawableRight="@mipmap/text_indicator" android:drawablePadding="4dp" android:layout_centerVertical="true" android:textAllCaps="false"/>
            <Button android:textSize="16sp" android:textColor="#ffffff" android:id="@+id/btn_preview" android:background="@null" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="预览(3)" android:layout_alignParentRight="true" android:textAllCaps="false"/>
            <View android:background="#cc111111" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_toLeftOf="@+id/btn_preview"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
