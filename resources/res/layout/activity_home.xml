<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="?android:attr/colorBackground" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/home_bottom" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/home_personal_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:padding="3dp" android:paddingBottom="0dp" android:layout_width="@dimen/activity_login_button" android:layout_height="@dimen/activity_login_button" android:src="@drawable/tab_personal"/>
            <TextView android:textSize="@dimen/homeTextSize" android:textColor="@drawable/tab_title_color" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personal"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/home_join_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:padding="3dp" android:paddingBottom="0dp" android:layout_width="@dimen/activity_login_button" android:layout_height="@dimen/activity_login_button" android:src="@drawable/tab_join"/>
            <TextView android:textSize="@dimen/homeTextSize" android:textColor="@drawable/tab_title_color" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/join"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/home_appointment_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:padding="3dp" android:paddingBottom="0dp" android:layout_width="@dimen/activity_login_button" android:layout_height="@dimen/activity_login_button" android:src="@drawable/tab_appointment"/>
            <TextView android:textSize="@dimen/homeTextSize" android:textColor="@drawable/tab_title_color" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/appointment"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/home_setting_btn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:padding="3dp" android:paddingBottom="0dp" android:layout_width="@dimen/activity_login_button" android:layout_height="@dimen/activity_login_button" android:src="@drawable/tab_setting"/>
            <TextView android:textSize="@dimen/homeTextSize" android:textColor="@drawable/tab_title_color" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/home_line" android:background="@color/line_between_color" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_above="@+id/home_bottom"/>
    <FrameLayout android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/home_line"/>
</RelativeLayout>
