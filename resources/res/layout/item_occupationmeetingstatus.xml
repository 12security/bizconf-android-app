<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_meetingName" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/menu" android:drawablePadding="10dp"/>
    <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_meetingTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="13:00 - 14:00" android:drawableLeft="@drawable/time" android:drawablePadding="10dp"/>
        <TextView android:id="@+id/tv_meetingParticipant" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:drawableLeft="@drawable/attendmeeting" android:drawablePadding="10dp"/>
    </LinearLayout>
    <View android:id="@+id/viewLine" android:background="@color/gray_hint" android:layout_width="match_parent" android:layout_height="0.1dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
</LinearLayout>
