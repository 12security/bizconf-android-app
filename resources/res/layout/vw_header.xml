<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="bottom" android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/header_content" android:layout_width="match_parent" android:layout_height="@dimen/activity_public_hint">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/header_text_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:id="@+id/header_hint_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/load_more"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp">
                <TextView android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reslse_to_loading"/>
                <TextView android:textSize="12sp" android:id="@+id/header_hint_time" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar android:id="@+id/header_progressbar" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginRight="30dp" android:layout_toLeftOf="@+id/header_text_layout" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/header_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:layout_toLeftOf="@+id/header_text_layout" android:layout_centerVertical="true" android:contentDescription="@null"/>
    </RelativeLayout>
</LinearLayout>
