<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/public_dialog_shape" android:layout_width="@dimen/activity_dialog_width" android:layout_height="wrap_content" android:minHeight="100dp" android:layout_centerInParent="true">
            <TextView android:textSize="@dimen/textSize32PX" android:textColor="@color/black" android:gravity="center" android:id="@+id/update_title" android:background="@drawable/public_shape_dialog" android:layout_width="match_parent" android:layout_height="@dimen/activity_public_editext" android:text="@string/setting_version_update"/>
            <include layout="@layout/public_grayline"/>
            <TextView android:textSize="@dimen/textSize24PX" android:textColor="@color/light_gray" android:gravity="center_vertical" android:paddingLeft="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_nomal_hint" android:layout_marginBottom="@dimen/activity_nomal_hint" android:text="@string/setting_version_update_msg"/>
            <TextView android:textSize="@dimen/textSize24PX" android:textColor="@color/light_gray" android:gravity="center_vertical" android:id="@+id/update_message" android:paddingLeft="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/activity_nomal_hint" android:layout_marginBottom="@dimen/activity_public_hint" android:text="@string/setting_update_mag"/>
            <include layout="@layout/public_grayline"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textSize="@dimen/textSize26PX" android:textColor="@color/violet" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/version_update_now" android:background="@drawable/public_shape_dialog" android:layout_width="0dp" android:layout_height="@dimen/activity_vertical_title" android:text="@string/setting_version_update_now" android:layout_weight="1"/>
                <View android:background="@color/light_gray" android:layout_width="0.1dp" android:layout_height="match_parent"/>
                <Button android:textSize="@dimen/textSize26PX" android:textColor="@color/light_gray" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/version_update_cancel" android:background="@drawable/public_shape_dialog" android:layout_width="0dp" android:layout_height="@dimen/activity_vertical_title" android:text="@string/setting_version_update_cancel" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
