<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#cc22292c" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp">
    <ImageView android:id="@+id/btn_back" android:background="@drawable/selector_back_press" android:padding="14dp" android:layout_width="48dp" android:layout_height="match_parent" android:src="@mipmap/ic_back" android:layout_centerVertical="true"/>
    <View android:background="#cc111111" android:layout_width="1px" android:layout_height="match_parent" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_toRightOf="@+id/btn_back"/>
    <TextView android:textSize="16dp" android:textColor="#ffffff" android:id="@+id/tv_des" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="选择图片" android:layout_toRightOf="@+id/btn_back" android:layout_centerVertical="true"/>
    <Button android:textSize="14dp" android:textColor="#ffffff" android:id="@+id/btn_ok" android:background="@drawable/selector_top_ok" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:minWidth="50dp" android:minHeight="30dp" android:text="完成(3/9)" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <ImageView android:id="@+id/btn_del" android:background="@drawable/selector_back_press" android:padding="14dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="match_parent" android:src="@mipmap/ic_del" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
