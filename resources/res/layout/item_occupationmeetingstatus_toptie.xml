<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="#ddeeff" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/tv_meetingRoomName" android:layout_width="@dimen/activity_dialog_width" android:layout_height="wrap_content" android:text="会畅视频会议室" android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/tv_meetingRoomNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20方" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
